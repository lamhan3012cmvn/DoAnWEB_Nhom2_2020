
<div class="content" style="margin-top:20px">
    <div class="page-inner">
        <h4 class="page-title">Thống Kê</h4>
        <div class="row">
            
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Top 10 User mua nhiều nhất trong năm
                        <script>document.write(new Date().getFullYear());</script></div>
                    </div>
                    <div class="card-body">
                        <div class="chart-container">
                            <canvas id="barChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Content/vendors/chart.js/chart.min.js"></script>
<script>
    var barChart = document.getElementById('barChart').getContext('2d');
    var rankUser = JSON.parse(@Html.Raw(Json.Encode(ViewBag.rankUser)));
   
    var myBarChart = new Chart(barChart, {
        type: 'bar',
        data: {
            labels: rankUser.lbl,
            datasets: [{
                label: "Số Lượng",
                backgroundColor: 'rgb(23, 125, 255)',
                borderColor: 'rgb(23, 125, 255)',
                data: rankUser.val,
            }],
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero: true
                    }
                }]
            },
        }
    });
</script>
