

<section class="infor_user">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 infor_user_box">
                <div class="infor_user_form_inner">
                    <h3>Xác Nhận Thông Tin</h3>
                    <form class="row infor_user">
                        <div class="col-md-12 form-group">
                            <input id="nameInformation" type="text"
                                   class="form-control creat_infor"
                                   name="nameInformation"
                                   placeholder="Họ và tên" 
                                   value="@ViewBag.infor.nameInformation"/>
                        </div>
                        <div class="col-md-12 form-group">
                            <select id="maleInformation"
                                    class="form-control creat_infor"
                                    name="maleInformation">
                                <option value="#">Giới tính</option>
                                <option value="Nam">Nam</option>
                                <option value="Nữ">Nữ</option>
                                <option value="#">Khác</option>
                            </select>
                            <script>
                                var valueMale =@Html.Raw(Json.Encode(ViewBag.infor.maleInformation))
                                document.getElementById('maleInformation').value = valueMale
                            </script>
                        </div>

                        <div class="col-md-12 form-group">
                            <input id="phoneInformation" type="text"
                                   class="form-control creat_infor"
                                   name="phoneInformation"
                                   placeholder="Số điện thoại" 
                                   value="@ViewBag.infor.phoneInformation"/>
                        </div>

                        <div class="col-md-12 form-group">
                            <input id="addressInformation" type="text"
                                   class="form-control creat_infor"
                                   name="addressInformation"
                                   placeholder="Địa chỉ" 
                                   value="@ViewBag.infor.addressInformation"/>
                        </div>

                        <div class="col-md-12 form-group">
                            <input id="birthday" type="date"
                                   class="form-control creat_infor"
                                   name="birthday"
                                   placeholder="Ngày sinh"
                                   value="@ViewBag.birth" />
            
                        </div>

                        <div class="col form-group" style="margin: 0 auto;">
                            <div id="submitInfo" class="btn submit_btn">
                                Cập nhật thông tin
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
