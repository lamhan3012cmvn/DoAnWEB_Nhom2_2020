@model PagedList.IPagedList<Web.ASP.models.BILL>

    @if (!(Model is null))
    {
        <div class="row d-flex justify-content-between">
            <h3 class="soLuong font-weight-bold">119 Đơn hàng</h3>
            <span class="btnChonNgay">Chọn ngày/In phiếu hàng loạt</span>
        </div>
        <div class="row title-colum-tab d-flex align-items-center my-3">
            <span class="col-4">Sản phẩm</span>
            <span class="col-2">Tổng đơn hàng</span>
            <span class="col-2">Trạng thái <br> Đếm ngược</span>
            <select class="col-2" style="background-color: transparent; border: none; outline: none;">
                <option>Vận chuyển</option>
            </select>
            <span class="col-2">Thao tác</span>
        </div>
        <div class="wrap-cart row">

            @foreach (var bill in Model)
            {
                <div class="card mb-3 col-12 px-0" style="width: 100%;">
                    <div class="card-header col-12">
                        <div class="row d-flex justify-content-between align-items-center">
                            <p class="m-0">@bill.information_id</p>
                            <p class="m-0">@bill.book_id</p>
                        </div>
                    </div>
                    <div class="card-body row">
                        <div class="col-4 d-flex justify-content-between">
                            <div>
                                <img src="@bill.BOOK.IMAGE_BOOK.link" alt="avatar">
                                <span>@bill.BOOK.nameBook</span>
                            </div>
                            <span>x@bill.total</span>
                        </div>
                        <div class="col-2">
                            <span>@(bill.total*bill.BOOK.priceBook)</span>
                            <p>Thanh toán khi nhận hàng</p>
                        </div>
                        <div class="col-2">
                            <strong>Đã giao</strong>
                            <p>@bill.INFORMATION.addressInformation</p>
                        </div>
                        <div class="col-2">
                            <Strong>J&T Express</Strong>
                        </div>
                        <div class="col-2">
                            <span class="text-primary" style="cursor: pointer;">Đánh giá</span>
                        </div>
                    </div>
                </div>

            }

        </div>
    }
