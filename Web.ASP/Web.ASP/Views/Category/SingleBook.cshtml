<!--================Single Product Area =================-->
<div class="product_image_area">
    <div class="container">
        <div class="row s_product_inner">
            <div class="col-lg-6">
                <div class=" d-flex s_product_img" style="height: 500px; justify-content: center; align-items: center;">
                    <img class=" h-100" src="@ViewBag.book.IMAGE_BOOK.link"/>
                </div>
            </div>
            <div class="col-lg-5 offset-lg-1">
                <div class="s_product_text">
                    <h3 data-id="@ViewBag.book.C_id" id="idBook">@ViewBag.book.nameBook</h3>
                    <h2>@ViewBag.book.priceBook</h2>
                    <ul class="list">
                        <li>
                            <a class="active" href="#">
                                <span style="width: auto;">Tác giả</span> : @ViewBag.book.AUTHOR.nameAuthor
                            </a>
                        </li>
                        <li>
                            <a class="active" href="#">
                                <span>Thể loại:</span> : @ViewBag.book.CATEGORY.nameCategory
                            </a>
                        </li>
                        <li>
                            <a class="active" href="#">
                                <span style="width: auto;">Số sản phẩm có sẵn</span> : @ViewBag.book.countBook
                            </a>
                        </li>
                    </ul>
                    <p>
                        @ViewBag.book.contentBook
                    </p>
                    <div class="product_count">
                        <label for="qty">Số lượng:</label>
                        <input onkeypress="var result = document.getElementById('sst'); var sst = result.value; if (isNaN(sst) || sst > @ViewBag.book.countBook ) {
                            result.value =@ViewBag.book.countBook; return false;} " type="number" 
                            name="qty" id="sst" maxlength="12" value="1" title="Quantity:" class="input-text qty">
                        <button onclick="var result = document.getElementById('sst'); var sst = result.value; if( !isNaN( sst ) && sst < @ViewBag.book.countBook ) result.value++;return false;"
                                class="increase items-count" type="button">
                            <i class="lnr lnr-chevron-up"></i>
                        </button>
                        <button onclick="var result = document.getElementById('sst'); var sst = result.value; if (!isNaN(sst) && sst > 0) result.value--; return false;"
                                class="reduced items-count" type="button">
                            <i class="lnr lnr-chevron-down"></i>
                        </button>
                    </div>
                    <div class="card_area">
                        <button class="main_btn" id="addCart">Thêm vào giỏ hàng</button>
                        <a class="icon_btn" href="#">
                            <i class="lnr lnr lnr-diamond"></i>
                        </a>
                        <a class="icon_btn" href="#">
                            <i class="lnr lnr lnr-heart"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
