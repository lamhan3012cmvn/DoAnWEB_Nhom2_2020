@model IEnumerable<Web.ASP.models.CART>
@{
    ViewBag.Title = "Cart";
}
<!--================Header Menu Area =================-->
@Html.Partial("_Headercomponent")
<!--================Header Menu Area =================-->
<!--================Home Banner Area =================-->
<section class="banner_area">
    <div class="banner_inner d-flex align-items-center">
        <div class="container">
            <div class="banner_content text-center">
                <h2>Giỏ Hàng</h2>
                <div class="page_link">
                    <a href="/Home/Index">Trang chủ</a>
                    <a href="/Cart/Index">Giỏ hàng</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================End Home Banner Area =================-->
<!--================Cart Area =================-->
<section class="cart_area">
    <div class="container">
        <div class="cart_inner">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Sản phẩm đã chọn</th>
                            <th scope="col">Giá</th>
                            <th scope="col">Số lượng</th>
                            <th scope="col">Thành tiền</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    @if (!(Model is null))
                    {
                        <tbody id="setPrice">
                            @foreach (var cart in Model)
                            {
                            <tr>
                                <td>
                                    <div class="media">
                                        <div class="d-flex">
                                            <img style="width:40px;height:40px;" src="@cart.BOOK.IMAGE_BOOK.link" alt="">
                                        </div>
                                        <div class="media-body">
                                            <p >@cart.BOOK.nameBook</p>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <h5 data-id="@cart.book_id" data-price="@cart.BOOK.priceBook" class="@cart.book_id">@cart.BOOK.priceBook VND</h5>
                                </td>
                                <td>
                                    <div class="product_count">
                                        <input type="text" name="qty" data-id="@cart.book_id" data-max="@cart.BOOK.countBook" class="@cart.book_id input-text qty" maxlength="12" value=@cart.count title="Quantity:">
                                        <button class="increase items-count" type="button">
                                            <i class="lnr lnr-chevron-up"></i>
                                        </button>
                                        <button class="reduced items-count" type="button">
                                            <i class="lnr lnr-chevron-down"></i>
                                        </button>
                                    </div>
                                </td>
                                <td>
                                    <h5 data-id="@cart.book_id" class="@cart.book_id price"> @(cart.count * cart.BOOK.priceBook) VND</h5>
                                </td>
                                <td style="text-align:center">
                                    <button class="btn btn-primary delete">Xóa</button>
                                </td>
                            </tr>
                            }
                             <tr>
                            <td>
                            </td>
                            <td>
                            </td>
                            <td>
                            </td>
                            <td>
                                <h5>Tổng cộng</h5>
                            </td>
                            <td>
                                <h5 id="totalPrice">123</h5>
                            </td>

                        </tr>
                           
                            <tr class="out_button_area">
                            <td>
                            </td>
                            <td>
                            </td>
                            <td>
                            </td>
                            <td>
                            </td>
                            <td>
                                <div class="checkout_btn_inner">
                                    <a class="gray_btn" href="/Category/Index">Tiếp tục mua sắm</a>
                                    <a class="main_btn" href="/User/Confirmation">Tiến hành thanh toán</a>
                                </div>
                            </td>
                        </tr>
                        </tbody>
                    }
                </table>
            </div>
        </div>
    </div>
</section>
<!--================End Cart Area =================-->
<!--================ start footer Area  =================-->
@Html.Partial("_FooterComponent")
<!--================ End footer Area  =================-->
<script src="~/Scripts/User/cart.js"></script>